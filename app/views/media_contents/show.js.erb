$('.modal-content').html("<%= j(render 'show') %>");
$('#show_modal').modal('show');
$('#notice').html(
  "<% if flash[:notice] %>" +
  "  <%= j(javascript_tag %Q{alert('#{flash.now[:notice]}')}) %>" +
  "<% end %>");
$('#show_modal').on('click.dismiss.bs.modal', function(){
  video = document.getElementById('modal-video');
  video.pause();
});
