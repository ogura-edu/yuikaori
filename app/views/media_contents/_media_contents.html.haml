.picture
  - if action_name == 'index' || action_name == 'search'
    = link_to image_tag(picture.address, class: "my-thumbnail img-rounded modalable"), picture, method: :get, remote: true
  
  - if action_name == 'destroy_index' || action_name == 'tmp'
    = image_tag picture.address, class: "my-thumbnail img-rounded selectable"
    = check_box_tag 'picture_ids[]', picture.id, false, class: 'multiple_checkbox'
    = image_tag '/images/item/checkmark.png', class: "checkmark"
