#show_modal.modal.fade{aria: {hidden: 'true', labelledby: 'modal_label'}, role: 'dialog', tabindex: '-1' }
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{aria: {hidden: 'true'}, data: {dismiss: 'modal'}, role: 'button'} x
        %h3#modal_label タイトル
      .modal-body
        %img.modal-image{src: '', alt: 'modal-image'}
      .modal-footer
        %button.btn{data: {dismiss: 'modal'}, aria: {hidden: 'true'}} Close
        %button.btn.btn-primary Change
