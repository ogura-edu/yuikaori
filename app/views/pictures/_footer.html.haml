%footer
  %nav.navbar.navbar-default.navbar-fixed-bottom{:role => "navigation"}
    .container-fluid
      %ul.nav.navbar-nav
        - if action_name == 'tmp'
          %li= button_tag 'すべて選択', id: 'check_all', type: 'button'
          %li= button_tag 'すべて解除', id: 'uncheck_all', type: 'button'
      
      %ul.nav.navbar-nav.navbar-right
        / index
        - if action_name == 'index'
          %li= link_to '削除申請モードへ', pictures_destroy_index_path(page: params[:page])
        / destroy_index
        - if action_name == 'destroy_index'
          %li= link_to '閲覧モードへ', pictures_path(page: params[:page])
          %li= submit_tag '削除申請', class: "btn btn-default", name: "request"
        / tmp
        - if action_name == 'tmp'
          %li= link_to '閲覧モードへ', pictures_path
          %li= submit_tag '削除', data: { confirm: '削除しますか？' }, class: "btn btn-default", name: "destroy"
          %li= submit_tag '表示許可', class: "btn btn-default", name: "permit"
        / edit
        - if action_name == 'edit'
          %li= link_to 'Show', picture_path(@picture)
          %li= link_to 'Back', pictures_path(page: params[:page])
        / new
        - if action_name == 'new'
          %li= link_to 'Back', pictures_path
        / show
        - if action_name == 'show'
          %li= link_to 'Edit', edit_picture_path(@picture)
          %li= link_to 'Back', pictures_path
