= form_for(video) do |f|
  - if video.errors.any?
    #error_explanation
      %h2
        = pluralize(video.errors.count, "error")
        prohibited this video from being saved:
      %ul
        - video.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :member
    = f.text_field :member
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :date
    = f.date_select :date
  .actions
    = f.submit
