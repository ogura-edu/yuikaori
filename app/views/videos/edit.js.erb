$('.modal-form').html("<%= escape_javascript(render 'edit') %>");
$('input[data-role=tagsinput]').tagsinput();
$('.new-record').on('click', function(){
  if($(this).parent().hasClass('event-form')) {
    $(this).parent().append('<input placeholder="event title" type="text" name="video[event_attributes][name]" id="video_event_attributes_name">');
    $(this).css('display', 'none');
  }
});
$('#show_modal').on('click.dismiss.bs.modal', function(){
  document.getElementById('modal-video').pause();
});
